{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "typeRoots": ["./types", "./node_modules/@types"],
        "target": "es3",
        "lib": ["es2017", "dom"],
        "sourceMap": true,
        "outDir": "dist/lib",
        "declaration": true,
        "declarationDir": "dist/types"
    },
    "include": ["src"]
}
